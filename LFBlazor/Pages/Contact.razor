@page "/contact"

<MudContainer Class="lf-container">
    <MudCard Class="contact-card">
        <MudCardHeader>
            <MudSpacer/>
            <MudText>Kontakt</MudText>
            <MudSpacer/>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField @bind-Value="email" Label="Email" Variant="Variant.Text" Adornment="@Adornment.Start" AdornmentIcon="@Icons.Filled.Email" AdornmentColor="Color.Primary" Class="contact-textfield"></MudTextField>
            <MudTextField @bind-Value="subject" Label="Předmět" Variant="Variant.Text" Adornment="@Adornment.Start" AdornmentIcon="@Icons.Filled.Subject" AdornmentColor="Color.Primary" Class="contact-textfield" ></MudTextField>
            <MudSelect T="MessageReason" Label="Důvod zprávy" AnchorOrigin="Origin.BottomCenter" Class="contact-textfield">
                <MudSelectItem T="MessageReason" Value="@MessageReason.CustomDevelopment" />
                <MudSelectItem T="MessageReason" Value="@MessageReason.Support" />
                <MudSelectItem T="MessageReason" Value="@MessageReason.Analysis" />
            </MudSelect>
            <MudTextField T="string" Label="Vaše zpráva" Variant="Variant.Text" Text="@text" Lines="5" Adornment="@Adornment.Start" AdornmentIcon="@Icons.Filled.TextFields" AdornmentColor="Color.Primary" Class="contact-textfield" />
        </MudCardContent>
        <MudCardActions Class="contact-card-actions">
            <MudButton Class="ma-5" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large" FullWidth>Odeslat <MudIcon Icon="@Icons.Filled.NavigateNext"/></MudButton>
        </MudCardActions>

    </MudCard>
</MudContainer>

<style>
    .contact-textfield{
        color: #b9ad00;
        margin:15px;
    }

    .contact-card {
        margin: 25px;
        background-color: #282928;
        border-radius: 15px;
        color: #b9ad00;
        width: 320px;
        height: 550px;
        width: 650px;
        position: relative;
    }

    .contact-card-actions {
        position: absolute;
        bottom: 0;
        width: 100%;
    }

</style>

@code {
    private enum MessageReason
    {
        CustomDevelopment,
        Support,
        Analysis
    }

    private string email = "";
    private string subject = "";
    private string text = "";



}
