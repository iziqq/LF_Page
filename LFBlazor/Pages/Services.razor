@page "/services"
@inject NavigationManager NavigationManager

<MudContainer Class="lf-container">
    <MudText Class="service-caption">Služby</MudText>
    <MudGrid>
        @foreach (var item in serviceModels)
        {
            <MudItem>
                <MudCard Class="service-card">
                    <MudCardHeader>
                        <MudIcon Icon="@item.Icon" Size="Size.Large"/>
                        <MudSpacer />
                        <MudText Class="service-subcaption">@item.Caption </MudText>
                        <MudSpacer />
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Class="service-text">@item.Text</MudText>
                    </MudCardContent>
                    <MudCardActions Class="service-card-actions">
                        <MudSpacer/>
                        <MudIconButton Variant="Variant.Outlined" Color="Color.Primary" Icon="@Icons.Filled.NavigateNext" Class="service-btn" Size="Size.Large" Href="@item.Href" />
                        <MudSpacer />
                    </MudCardActions>
                </MudCard>
            </MudItem>
        
        }
    </MudGrid>
</MudContainer>

<style>
    .service-card {
        margin: 25px;
        background-color: #282928;
        border-radius: 15px;
        color: #FBC02D;
        width: 320px;
        height: 400px;
        position: relative;
    }

    .service-card-actions{
        position:absolute;
        bottom:0;
        width:100%;
    }

    .service-text {
        color: #a1a1a1;
    }

    .service-subcaption {
        font-size: 25px;
        margin-bottom: 10px;
        color: #FDD835;
    }

    .service-caption {
        font-size: 35px;
        color: #FDD835;
    }

    .service-btn {
        margin: 10px;
        border-radius: 50px !important;
    }
</style>

@code {

    public class ServiceModel
    {
        public string Caption { get; set; }
        public string Text { get; set; }
        public string Icon { get; set; }
        public string Href { get; set; }
    }

    List<ServiceModel> serviceModels = new List<ServiceModel>
    {
        new ServiceModel { Caption="Vývoj na zakázku", Text="TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT " , Icon=Icons.Filled.Computer, Href="/services/customDevelopment" },
        new ServiceModel { Caption="Podpora", Text="TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT " , Icon=Icons.Filled.DataObject, Href="/services/support" },
        new ServiceModel { Caption="Analýza projektu", Text="TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT TEXT " , Icon=Icons.Filled.Analytics, Href="/services/analysis" },
    };

    void NavigateMeToUrl(string url)
    {
        NavigationManager.NavigateTo(url);
    }
}
